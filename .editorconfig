# .editorconfig

# Indicar el tipo de archivo donde se aplicará la configuración
root = true

# Configuración para todos los archivos
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configuración para archivos Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Configuración para archivos JavaScript y TypeScript
[*.js, *.ts]
indent_size = 2

# Configuración para archivos JSON y YAML
[*.json, *.yml]
indent_size = 2

# Configuración para archivos CSS y SCSS
[*.css, *.scss]
indent_size = 2
